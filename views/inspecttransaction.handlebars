{{>navbar}}

    <div class = "container-fluid mb-5">
        <table id = "transactions" class = "table table-sm table-striped table-bordered mb-5" >
            <thead class = "thead-dark" >
                <th scope = "col" onclick = "sortTable('transactions', 2, 0)" >Transaction ID</th>
                <th scope = "col" onclick = "sortTable('transactions', 1, 1)" >Customer first name</th>
                <th scope = "col" onclick = "sortTable('transactions', 1, 2)" >Customer last name</th>
                <th scope = "col" onclick = "sortTable('transactions', 1, 3)" >Payment method</th>
                <th scope = "col" onclick = "sortTable('transactions', 3, 4)" >Payment total</th>
                <th scope = "col" onclick = "sortTable('transactions', 4, 5)" >Date</th>
            </thead>
            <tbody>
                {{#each transactions}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{#if fname}}{{fname}}{{else}}---{{/if}}</td>
                    <td>{{#if lname}}{{lname}}{{else}}---{{/if}}</td>
                    <td>{{payment_method}}</td>
                    <td id = "total-val" >${{payment_total}}</td>
                    <td>{{date}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        <h2> Products purchased </h2>
        <table id = "transitems" class = "table table-sm table-striped table-bordered" >
            <thead class = "thead-dark" >
                <th scope = "col" onclick = "sortTable('transitems', 2, 0)" >Item ID</th>
                <th scope = "col" onclick = "sortTable('transitems', 1, 1)" >Name</th>
                <th scope = "col" onclick = "sortTable('transitems', 2, 2)" >Serial number</th>
                <th scope = "col" onclick = "sortTable('transitems', 3, 3)" >Price</th>
                <th scope = "col"  >Refund item</th>
            </thead>
            <tbody>
                {{#each items}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td>{{serial}}</td>
                    <td class = "prices" >${{selling_price}}</td>
                    <td><input type = "checkbox" class = "refundable" id = "inventory{{id}}"></td>
                </tr>
                {{/each}}
            </tbody>
        </table>


        <button class = "btn btn-primary" onclick = "deleteAll()" >Refund entire transaction</button>
        <button class = "btn btn-primary" onclick = "deleteSome()">Refund selected items</button>
    </div>
