{{>navbar}}

    <div class = "container-fluid mb-5">
        <table id = "customers" class = "table table-sm table-striped table-bordered" >
            <thead class = "thead-dark" >
                <th scope = "col" onclick = "sortTable('customers', 2, 0)" >Customer ID</th>
                <th scope = "col" onclick = "sortTable('customers', 1, 1)" >First name</th>
                <th scope = "col" onclick = "sortTable('customers', 1, 2)" >Last name</th>
                <th scope = "col" onclick = "sortTable('customers', 2, 3)" >Phone number</th>
            </thead>
            <tbody>
                {{#each customers}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{fname}}</td>
                    <td>{{lname}}</td>
                    <td>{{phone_number}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
